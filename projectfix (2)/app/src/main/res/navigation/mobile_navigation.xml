<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_checkin">

    <fragment
        android:id="@+id/navigation_checkin"
        android:name="com.example.projectfix.ui.home.HomeFragment"
        android:label="@string/check"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_learn"
        android:name="com.example.projectfix.ui.dashboard.DashboardFragment"
        android:label="@string/learn"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_statistic"
        android:name="com.example.projectfix.ui.notifications.NotificationsFragment"
        android:label="@string/statistic"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.projectfix.ui.settings.SettingsFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />
</navigation>